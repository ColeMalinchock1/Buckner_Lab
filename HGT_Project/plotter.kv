<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width , root.height

        padding: 50
        spacing: 20
        
        Label:
            size_hint: (1 , 0.5)
            font_size: 220
            text: "Halo Gravity Traction"

        Graph:
            size_hint: (1 , 0.5)
            id: graph
            xlabel: "X"
            ylabel: "Y"
            x_ticks_major: 25
            y_ticks_major: 10
            y_grid_label: True
            x_grid_label: True
            padding: 5
            xlog: False
            ylog: False
            x_grid: True
            y_grid: True
            xmin: -0
            xmax: 100
            ymin: -50
            ymax: 50